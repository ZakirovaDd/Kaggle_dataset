	df_train = pd.read_csv('/kaggle/input/......dataset/train.csv/train.csv')
df_train.head()
df_train.columns.tolist()
df_train.describe()
	#Hue
sns.set(style="whitegrid")
plt.figure(figsize=(10, 6))
sns.scatterplot(data=df_train, x='ClimateChange', y='FloodProbability', hue='Deforestation', palette='Set1')
plt.title('FloodProbability vs. ClimateChange by Deforestation')
plt.xlabel('ClimateChange')
plt.ylabel('FloodProbability')
plt.legend(title='Deforestation',loc='upper right')
plt.gcf().set_facecolor('lightgrey') 
plt.show()
	#
sns.set(style="whitegrid")
plt.figure(figsize=(10, 6))
sns.scatterplot(data=df_train, x='PoliticalFactors', y='FloodProbability', hue='Deforestation', palette='Set1')
plt.title('FloodProbability vs. Political Factors by Deforestation')
plt.xlabel('PoliticalFactors')
plt.ylabel('FloodProbability')
plt.legend(title='Deforestation',loc='upper right')
plt.gcf().set_facecolor('lightgrey') 
plt.show()
	#
ax1=df_train.plot(kind='scatter', x='Urbanization', y='FloodProbability', color='r', label='Urbanization')
ax2=df_train.plot(kind='scatter', x='PoliticalFactors', y='FloodProbability', color='g', label='ClimateChange', ax=ax1)
